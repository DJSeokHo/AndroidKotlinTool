<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".main.examples.materialdesigntutorial.dayone.MDDayOneActivity"
    android:background="@color/white">
    
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        
        <FrameLayout
            app:layout_scrollFlags="scroll|enterAlwaysCollapsed"
            android:background="#333333"
            android:layout_width="match_parent"
            android:layout_height="60dp">
            
            <TextView
                android:text="Action Bar"
                android:textSize="9pt"
                android:textColor="@color/white"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            
        </FrameLayout>
        
        <FrameLayout
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:minHeight="50dp">
            
            <ImageView
                android:src="@drawable/dom_hill"
                android:scaleType="centerCrop"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            
            <LinearLayout
                android:background="#80000000"
                android:layout_gravity="bottom"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">
    
                <Button
                    android:textColor="@color/white"
                    android:layout_gravity="bottom"
                    android:text="menu 1"
                    android:background="#0000"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="50dp"/>
    
                <Button
                    android:textColor="@color/white"
                    android:layout_gravity="bottom|end"
                    android:text="menu 2"
                    android:background="#0000"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="50dp"/>
    
                <Button
                    android:textColor="@color/white"
                    android:layout_gravity="bottom|end"
                    android:text="menu 3"
                    android:background="#0000"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="50dp"/>
            </LinearLayout>
        
        </FrameLayout>
       
    </com.google.android.material.appbar.AppBarLayout>
    
    <androidx.core.widget.NestedScrollView
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        
            <TextView
                android:textSize="15pt"
                android:textColor="@color/black"
                android:gravity="center"
                android:background="#EA8644"
                android:text="linear layout item first"
                android:layout_width="match_parent"
                android:layout_height="200dp"/>
        
            <TextView
                android:textSize="15pt"
                android:textColor="@color/black"
                android:gravity="center"
                android:background="#44EADC"
                android:text="linear layout item"
                android:layout_width="match_parent"
                android:layout_height="200dp"/>
        
            <TextView
                android:textSize="15pt"
                android:textColor="@color/black"
                android:gravity="center"
                android:background="#EA8644"
                android:text="linear layout item"
                android:layout_width="match_parent"
                android:layout_height="200dp"/>
        
            <TextView
                android:textSize="15pt"
                android:textColor="@color/black"
                android:gravity="center"
                android:background="#44EADC"
                android:text="linear layout item"
                android:layout_width="match_parent"
                android:layout_height="200dp"/>
        
            <TextView
                android:textSize="15pt"
                android:textColor="@color/black"
                android:gravity="center"
                android:background="#EA8644"
                android:text="linear layout item"
                android:layout_width="match_parent"
                android:layout_height="200dp"/>
        
            <TextView
                android:textSize="15pt"
                android:textColor="@color/black"
                android:gravity="center"
                android:background="#44EADC"
                android:text="linear layout item last one"
                android:layout_width="match_parent"
                android:layout_height="200dp"/>
    
        </LinearLayout>
        
    </androidx.core.widget.NestedScrollView>
   
    
</androidx.coordinatorlayout.widget.CoordinatorLayout>