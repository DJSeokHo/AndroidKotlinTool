<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".main.examples.fashionshoppingdetail.FashionShoppingDetailActivity"
    android:background="#111111">
    
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:scrollbars="none"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="0dp">
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
    
            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/shapeableImageView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="60dp"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:translationZ="10dp" />
            
            <TextView
                android:id="@+id/textViewCategory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="30dp"
                android:layout_marginTop="50dp"
                android:textColor="#555555"
                android:textSize="5pt" />
    
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="30dp"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">
                
                <TextView
                    android:id="@+id/textViewName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#111111"
                    android:textSize="9pt" />
        
                <TextView
                    android:id="@+id/textViewPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:textColor="#111111"
                    android:textSize="9pt"
                    android:textStyle="bold" />
    
            </LinearLayout>
            
            <View
                android:id="@+id/viewColor"
                android:layout_width="60dp"
                android:layout_height="3dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="10dp"
                android:background="#FF9800" />
    
            <TextView
                android:id="@+id/textViewDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="30dp"
                android:layout_marginTop="10dp"
                android:textColor="#666666"
                android:textSize="5pt" />
            
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="40dp"
                android:orientation="horizontal">
    
                <TextView
                    android:id="@+id/textViewS"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/size_un_selection_bg"
                    android:gravity="center"
                    android:padding="4dp"
                    android:text="S"
                    android:textColor="#333333"
                    android:textSize="6pt" />
    
                <TextView
                    android:id="@+id/textViewM"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="6dp"
                    android:background="@drawable/size_un_selection_bg"
                    android:gravity="center"
                    android:padding="4dp"
                    android:text="M"
                    android:textColor="#333333"
                    android:textSize="6pt" />
    
                <TextView
                    android:id="@+id/textViewL"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="6dp"
                    android:background="@drawable/size_selection_bg"
                    android:gravity="center"
                    android:padding="4dp"
                    android:text="L"
                    android:textColor="#333333"
                    android:textSize="6pt" />
    
                <TextView
                    android:id="@+id/textViewXL"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="6dp"
                    android:background="@drawable/size_un_selection_bg"
                    android:gravity="center"
                    android:padding="4dp"
                    android:text="XL"
                    android:textColor="#333333"
                    android:textSize="6pt" />
    
                <TextView
                    android:id="@+id/textViewXXL"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="6dp"
                    android:background="@drawable/size_un_selection_bg"
                    android:gravity="center"
                    android:padding="4dp"
                    android:text="XXL"
                    android:textColor="#333333"
                    android:textSize="6pt" />

            </LinearLayout>
    
            <Button
                android:id="@+id/buttonContinue"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginTop="40dp"
                android:background="@drawable/buy_button_bg"
                android:text="CONTINUE"
                android:textColor="#ffffff"
                android:textSize="10pt" />

        </LinearLayout>

    </ScrollView>
    
    <ImageButton
        android:id="@+id/imageButtonMenu"
        android:background="@color/transparent"
        android:padding="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="20dp"
        android:src="@drawable/menu"
        android:scaleType="fitCenter"
        android:layout_width="40dp"
        android:layout_height="40dp"/>
   
    <ImageButton
        android:padding="8dp"
        android:background="@color/transparent"
        android:id="@+id/imageButtonCart"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:src="@drawable/cart_off"
        android:scaleType="fitCenter"
        android:layout_width="40dp"
        android:layout_height="40dp"/>
    
    <ImageButton
        android:layout_marginEnd="6dp"
        android:padding="8dp"
        android:background="@color/transparent"
        android:id="@+id/imageButtonLike"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/imageButtonCart"
        android:layout_marginTop="20dp"
        android:src="@drawable/like_off"
        android:scaleType="fitCenter"
        android:layout_width="40dp"
        android:layout_height="40dp"/>
    
</androidx.constraintlayout.widget.ConstraintLayout>