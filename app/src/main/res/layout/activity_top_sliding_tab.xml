<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:tools="http://schemas.android.com/tools"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		tools:context=".template.topslidingtabs.activity.TopSlidingTabActivity">
	
	<LinearLayout
			android:layout_marginTop="80dp"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:orientation="vertical">
		
		<com.swein.androidkotlintool.template.topslidingtabs.view.SlidingTabLayout
				android:id="@+id/slidingTabLayout"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:minHeight="50dp"/>
		
		<android.support.v4.view.ViewPager
				android:id="@+id/slidingViewPager"
				android:layout_width="match_parent"
				android:layout_height="wrap_content" />
	
	</LinearLayout>
	
	<FrameLayout
			android:id="@+id/frameLayoutNavigationContainer"
			android:layout_width="match_parent" android:layout_height="80dp"/>
	
</FrameLayout>