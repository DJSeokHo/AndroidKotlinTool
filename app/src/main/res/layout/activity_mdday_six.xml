<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".main.examples.materialdesigntutorial.daysix.MDDaySixActivity">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayoutID"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:counterEnabled="true"
        app:counterMaxLength="8"
        app:errorEnabled="true"
        app:hintTextColor="#333333"
        app:errorTextColor="#FF0000">
        
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/textInputEditTextID"
            android:maxLines="1"
            android:hint="User ID (length 6~8)"
            android:background="@color/white"
            android:textColorHint="#dddddd"
            android:textColor="#333333"
            android:textSize="8pt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        
    </com.google.android.material.textfield.TextInputLayout>
    
    
    <com.google.android.material.textfield.TextInputLayout
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/textInputLayoutID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:counterEnabled="true"
        app:errorEnabled="false"
        app:hintTextColor="#333333"
        app:passwordToggleEnabled="true"
        app:errorTextColor="#FF0000">
       
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/textInputEditTextPassword"
            android:maxLines="1"
            android:maxLength="10"
            android:inputType="textPassword"
            android:hint="Password"
            android:background="@color/white"
            android:textColorHint="#dddddd"
            android:textColor="#333333"
            android:textSize="8pt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    
    </com.google.android.material.textfield.TextInputLayout>
    
    <Button
        android:id="@+id/button"
        android:textAllCaps="false"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="30dp"
        android:text="Sign In"
        app:layout_constraintBottom_toBottomOf="parent"/>
    
</androidx.constraintlayout.widget.ConstraintLayout>