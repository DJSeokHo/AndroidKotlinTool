<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".main.examples.workmanager.WorkManagerDemoActivity"
    android:background="@color/white">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">
    
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
    
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
    
                <Button
                    android:background="#2196F3"
                    android:text="start"
                    android:textSize="7pt"
                    android:textColor="@color/white"
                    android:id="@+id/button"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"/>
    
                <Button
                    android:layout_marginHorizontal="10dp"
                    android:background="#2196F3"
                    android:text="cancel orange"
                    android:textSize="7pt"
                    android:textColor="@color/white"
                    android:id="@+id/buttonCancelOrange"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="wrap_content"/>
    
                <Button
                    android:background="#2196F3"
                    android:text="cancel teal"
                    android:textSize="7pt"
                    android:textColor="@color/white"
                    android:id="@+id/buttonCancelTeal"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="wrap_content"/>
                
            </LinearLayout>
           
            
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="500dp"
                android:background="#E15046">
    
                <TextView
                    android:text="orange area"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:textColor="@color/white"
                    android:textSize="10pt"
                    android:id="@+id/textViewOrange"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"/>
                
            </FrameLayout>
    
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="500dp"
                android:background="#62C7E6">
        
                <TextView
                    android:text="teal area"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:textColor="@color/white"
                    android:textSize="10pt"
                    android:id="@+id/textViewTeal"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"/>
    
            </FrameLayout>
            
        </LinearLayout>
        
    </ScrollView>
    
</FrameLayout>