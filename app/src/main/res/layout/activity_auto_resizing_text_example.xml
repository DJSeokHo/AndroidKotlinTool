<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".main.examples.autoresizingtextexample.AutoResizingTextExampleActivity"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/white">

    <!--
    android:autoSizeMaxTextSize="20pt" maximum size
    android:autoSizeMinTextSize="5pt" minimum size
    android:autoSizeStepGranularity="1pt" step value of size changing
    -->
    <TextView
        android:padding="10dp"
        android:background="@color/black"
        android:textColor="@color/white"
        android:id="@+id/textView"
        android:autoSizeMaxTextSize="20pt"
        android:autoSizeMinTextSize="5pt"
        android:autoSizeStepGranularity="1pt"
        android:autoSizeTextType="uniform"
        android:layout_width="200dp"
        android:layout_height="100dp"
        tools:targetApi="o" />

    <Button
        android:id="@+id/buttonShortText"
        android:layout_marginTop="30dp"
        android:text="short text"
        android:textSize="8pt"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/buttonMiddleText"
        android:text="middle text"
        android:textSize="8pt"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/buttonLongText"
        android:text="long text"
        android:textSize="8pt"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/buttonLongLongText"
        android:text="long long text"
        android:textSize="8pt"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</LinearLayout>