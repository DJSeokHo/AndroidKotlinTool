<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".main.examples.materialdesigntutorial.daythree.MDDayThreeActivity"
    android:background="@color/black">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="300dp">
        
        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/collapsingToolbarLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">
    
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/dom_hill"
                app:layout_collapseMode="parallax" />
            
            <View
                android:id="@+id/viewCover"
                android:background="#333333"
                android:alpha="0"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
    
            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:elevation="4dp"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:theme="@style/ThemeOverlay.MaterialComponents.ActionBar"
                app:popupTheme="@style/ThemeOverlay.MaterialComponents.Light"
                app:layout_collapseMode="pin"/>
            
        </com.google.android.material.appbar.CollapsingToolbarLayout>
        
    </com.google.android.material.appbar.AppBarLayout>
    
    <androidx.core.widget.NestedScrollView
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            
            <TextView
                android:textSize="15pt"
                android:textColor="@color/black"
                android:gravity="center"
                android:background="#EA8644"
                android:text="linear layout item first"
                android:layout_width="match_parent"
                android:layout_height="200dp"/>
            
            <TextView
                android:textSize="15pt"
                android:textColor="@color/black"
                android:gravity="center"
                android:background="#44EADC"
                android:text="linear layout item"
                android:layout_width="match_parent"
                android:layout_height="200dp"/>
            
            <TextView
                android:textSize="15pt"
                android:textColor="@color/black"
                android:gravity="center"
                android:background="#EA8644"
                android:text="linear layout item"
                android:layout_width="match_parent"
                android:layout_height="200dp"/>
            
            <TextView
                android:textSize="15pt"
                android:textColor="@color/black"
                android:gravity="center"
                android:background="#44EADC"
                android:text="linear layout item"
                android:layout_width="match_parent"
                android:layout_height="200dp"/>
            
            <TextView
                android:textSize="15pt"
                android:textColor="@color/black"
                android:gravity="center"
                android:background="#EA8644"
                android:text="linear layout item"
                android:layout_width="match_parent"
                android:layout_height="200dp"/>
            
            <TextView
                android:textSize="15pt"
                android:textColor="@color/black"
                android:gravity="center"
                android:background="#44EADC"
                android:text="linear layout item last one"
                android:layout_width="match_parent"
                android:layout_height="200dp"/>
        
        </LinearLayout>
    
    </androidx.core.widget.NestedScrollView>
    
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/floatingActionButton"
        android:layout_marginEnd="10dp"
        app:maxImageSize="30dp"
        app:fabSize="normal"
        app:fabCustomSize="56dp"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:src="@drawable/camera_album"
        app:tint="@null"
        app:backgroundTint="#333333"
        app:layout_anchor="@+id/appBarLayout"
        app:layout_anchorGravity="bottom|right|end"
        android:contentDescription="@null" />
    
</androidx.coordinatorlayout.widget.CoordinatorLayout>