<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".main.examples.multiplebackstackforfragmentsinactivity.MultipleBackStackExampleActivity">
    
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        
        <FrameLayout
            android:id="@+id/frameLayoutContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="60dp"/>
        
        <com.google.android.material.bottomappbar.BottomAppBar
            android:backgroundTint="#333333"
            android:id="@+id/bottomAppBar"
            android:layout_gravity="bottom"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:clickable="false"
            app:fabAlignmentMode="end"
            app:fabAnimationMode="slide"
            app:hideOnScroll="true"
            app:fabCradleMargin="5dp"
            app:fabCradleVerticalOffset="0dp"
            app:contentInsetEnd="0dp"
            app:contentInsetStart="0dp"
            app:fabCradleRoundedCornerRadius="16dp">
            
            <!-- app:labelVisibilityMode="labeled" -->
            <com.google.android.material.bottomnavigation.BottomNavigationView
                android:id="@+id/bottomNavigationView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="0dp"
                app:labelVisibilityMode="auto"
                app:itemRippleColor="@color/white"
                app:itemIconTint="@color/bottom_navigation_menu_item_icon_color"
                app:itemTextColor="@color/bottom_navigation_menu_item_text_color"
                android:background="@drawable/bottom_navigation_menu_background_transparent"
                app:menu="@menu/mbs_bottom_navigation_menu" />
        
        </com.google.android.material.bottomappbar.BottomAppBar>
        
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:translationZ="5dp"
            android:elevation="5dp"
            android:scaleType="centerInside"
            android:id="@+id/floatingActionButton"
            app:rippleColor="@color/white"
            app:maxImageSize="34dp"
            app:fabSize="normal"
            app:fabCustomSize="56dp"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:src="@mipmap/ti_cm_post"
            app:tint="@null"
            app:backgroundTint="#333333"
            app:layout_anchor="@id/bottomAppBar"
            android:contentDescription="@null" />
    
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
    
</androidx.constraintlayout.widget.ConstraintLayout>