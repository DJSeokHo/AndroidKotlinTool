<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:background="@color/app_basic_theme_color">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                
                <Button
                    android:textAllCaps="false"
                    android:background="@color/white"
                    android:layout_margin="5dp"
                    android:id="@+id/buttonLoginTemplate"
                    android:textSize="10pt"
                    android:text="Login Sample"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
    
                <Button
                        android:textAllCaps="false"
                        android:background="@color/white"
                        android:layout_margin="5dp"
                        android:id="@+id/buttonListTemplate"
                        android:textSize="10pt"
                        android:text="List Sample"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
    
                <Button
                        android:textAllCaps="false"
                        android:background="@color/white"
                        android:layout_margin="5dp"
                        android:id="@+id/buttonTabHost"
                        android:textSize="10pt"
                        android:text="Tab Host Sample"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
    
                <Button
                        android:textAllCaps="false"
                        android:background="@color/white"
                        android:layout_margin="5dp"
                        android:id="@+id/buttonTopSlidingTab"
                        android:textSize="10pt"
                        android:text="Top Sliding Tab Sample"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
    
                <Button
                        android:textAllCaps="false"
                        android:background="@color/white"
                        android:layout_margin="5dp"
                        android:id="@+id/buttonViewPager"
                        android:textSize="10pt"
                        android:text="Infinite View Pager Sample"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
            </LinearLayout>
            
        </ScrollView>

</FrameLayout>