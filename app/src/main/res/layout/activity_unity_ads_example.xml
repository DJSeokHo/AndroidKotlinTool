<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".main.examples.unityadsexample.UnityAdsExampleActivity"
    android:background="@color/white"
    >
    
    <LinearLayout
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">
    
        <Button
            android:background="@color/black"
            android:textColor="@color/white"
            android:text="Interstitial"
            android:id="@+id/buttonInterstitial"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    
        <Button
            android:layout_marginVertical="5dp"
            android:background="@color/black"
            android:textColor="@color/white"
            android:text="Rewarded"
            android:id="@+id/buttonRewarded"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    
        <Button
            android:background="@color/black"
            android:textColor="@color/white"
            android:text="Banner"
            android:id="@+id/buttonBanner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        
    </LinearLayout>
    
    
    <FrameLayout
        android:visibility="gone"
        android:layout_gravity="bottom|center_horizontal"
        android:id="@+id/frameLayoutAdContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        
        <TextView
            android:id="@+id/textViewCloseBanner"
            android:textSize="5pt"
            android:textColor="@color/white"
            android:padding="4dp"
            android:text="close"
            android:layout_gravity="end"
            android:background="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        
    </FrameLayout>
    
    
</FrameLayout>